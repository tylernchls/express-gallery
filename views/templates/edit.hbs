<h1>Edit Project</h1>

  <form name="form" action="/gallery/{{project.id}}" method="POST" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_method" value="PUT">
    Link: <br>
    <input type="text" id="link_form" name="link" value="{{project.link}}" class="box"><br>
    Description: <br>
    <textarea id="desc_form" name="description">
      {{project.description}}
    </textarea><br>
    <input type="submit" value="Submit" id="submit">
  </form>

<div>
  <input type=button id="back_btn" onClick="location.href='/'" value='Back'>
</div>


